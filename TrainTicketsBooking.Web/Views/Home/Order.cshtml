@using System.Web.Optimization;
@using System.Web.WebPages;
@using System.Web.Mvc.Html;
@using System.Web.Mvc;

@model TrainTicketsBooking.Models.OrderModel


@{
    ViewBag.Title = "在线订票";
}


<!-- begin col-12 -->
<div class="col-md-12">

    <!-- begin invoice -->
    <div class="invoice">
        <div class="invoice-company">
            <span class="pull-right hidden-print">
                @*<a href="javascript:;" class="btn btn-sm btn-success m-b-10"><i class="fa fa-download m-r-5"></i> Export as PDF</a>*@
                <a href="javascript:;" onclick="window.print()" class="btn btn-sm btn-success m-b-10"><i class="fa fa-print m-r-5"></i> 打印</a>
            </span>
            下单购买
        </div>

        <div class="invoice-content">
           
            <div class="invoice-header">
                <div class="invoice-from">
                    <strong>
                        @Model.FromStation
                    </strong>
                    <address class="m-t-5 m-b-5">
                            <small>出发站</small><br />
                        </address>
</div>
                <div class="invoice-to">
                    <strong>
                        @Model.ToStation
                    </strong>
                    <address class="m-t-5 m-b-5">
                        <small>到达站</small><br />
                    </address>
                </div>
                <div class="invoice-date">
                    <h4>G71 / 高速动车</h4>
                    <small>北京西 - 广州南 （G71） 共2239公里</small>
                </div>
            </div>
            
        </div>

@using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        @Html.HiddenFor(model=>model.From)
        @Html.HiddenFor(model => model.To)
    
        @Html.HiddenFor(model => model.FromStation)
        @Html.HiddenFor(model => model.ToStation)
        <div class="invoice-content">
            
            <div class="row m-b-20">
                <h5 class="col-md-12">乘车人信息</h5>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "乘车人姓名" })
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.UserIdCardNo, new { @class = "form-control", placeholder = "身份证号" })
                    @Html.ValidationMessageFor(model => model.UserIdCardNo)
                </div>

                <div class=" col-md-4">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "手机号码" })
                    @Html.ValidationMessageFor(model => model.Phone)
                </div>
            </div>
            
            <div class="invoice-price m-b-20">
                <div class="invoice-price-left">
                    <div class="invoice-price-row">
                        <div class="sub-price">
                            <small>单价</small>
                            ￥60.00
                        </div>
                        <div class="sub-price">
                            *
                        </div>
                        <div class="sub-price">
                            <small>数量</small>
                            1
                        </div>
                    </div>
                </div>
                <div class="invoice-price-right">
                    <small>合计</small> ￥60.00
                </div>
            </div>
        </div>

        <input type="submit" class="btn btn-success btn-block btn-lg" value="提交确认购买" />
}
        <div class="invoice-note">
            * Make all cheques payable to [Your Company Name]<br />
            * Payment is due within 30 days<br />
            * If you have any questions concerning this invoice, contact  [Name, Phone Number, Email]
        </div>
    </div>
    <!-- end invoice -->

</div>
<!-- end col-12 -->